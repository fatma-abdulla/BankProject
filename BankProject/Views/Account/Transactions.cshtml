@using BankProject.Models.ViewModels
@model TransactionViewModel

@{
    ViewData["Title"] = "Transactions";
}

<h1>Transactions</h1>


<form method="post" asp-action="Transactions">
	<select name="ttype" class="form-control">
		<option value="All">All</option>
		<option value="Deposit">Deposit</option>
		<option value="Withdraw">Withdraw</option>
				<option value="Transferred Money">Transferrred Money</option>
		<option value="Recieved Money ">Recieved Money</option>
	</select>
	<input name="byAmount" placeholder="Enter Amount " class="form-control" />
	<input type="submit" class="btn btn-success" value="Search" />
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Transaction Type</th>
            <th scope="col">Transaction Date</th>
            <th scope="col"> Amount </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transactions)
        {
            <tr>
				@if (item.TransactionType == "Deposit")
				{
					<td class="text-success"> @item.TransactionType</td>
				}
				else
				{
					<td class="text-danger"> @item.TransactionType</td>
				}
                <td>@item.TransationDate)</td>
				@if (item.TransactionType == "Deposit")
				{
					<td class="text-success">+ @item.Newbalance</td>
				}
				else
				{
					<td class="text-danger">- @item.Newbalance</td>
				}
            </tr>
        }
    </tbody>
</table>
